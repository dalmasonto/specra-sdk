{
  "name": "specra",
  "version": "0.1.17",
  "description": "A modern documentation library for Next.js with built-in versioning, API reference generation, full-text search, and MDX support",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./app/layout": {
      "types": "./dist/app/layout.d.ts",
      "import": "./dist/app/layout.js"
    },
    "./app/docs-page": {
      "types": "./dist/app/docs-page.d.ts",
      "import": "./dist/app/docs-page.js"
    },
    "./app/api/mdx-watch": {
      "types": "./dist/app/api/mdx-watch/route.d.ts",
      "import": "./dist/app/api/mdx-watch/route.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./lib": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.js"
    },
    "./styles": "./dist/index.css",
    "./styles.css": "./dist/index.css"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "documentation",
    "docs",
    "nextjs",
    "mdx",
    "api-reference",
    "versioning",
    "search"
  ],
  "author": "dalmasonto, arthur-kamau",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dalmasonto/specra"
  },
  "peerDependencies": {
    "next": "^14.0.0 || ^15.0.0 || ^16.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-accordion": "^1.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-collapsible": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.4",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.4",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.5.1",
    "gray-matter": "^4.0.3",
    "katex": "^0.16.27",
    "lucide-react": "^0.454.0",
    "meilisearch": "^0.54.0",
    "mermaid": "^11.12.2",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.4.6",
    "react-hook-form": "^7.60.0",
    "react-markdown": "^9.0.1",
    "recharts": "^2.15.4",
    "rehype-katex": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "next": "^16.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tsup": "^8.3.5",
    "typescript": "^5"
  }
}
